@page "/user/forgetpassword/verify"

<form id="confirm-forgot-password" class="tab-pane fade active show col-12">
    <h4 class="text-secondary">تایید</h4>
    <p class="font-weight-600">We will send you an email to reset your password. </p>
    <div class="mb-3">
        <label class="label-title">کد *</label>
        <input name="dzName" required="" class="form-control" placeholder="12345" type="text" pattern="[0-9]{5}">
    </div>
    <div class="text-left">
        <a class="btn btn-outline-secondary btnhover m-r10" href="/user/forgetpassword">برگشت</a>
        <button class="btn btn-primary btnhover">تایید</button>
    </div>
</form>

